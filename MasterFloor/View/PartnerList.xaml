<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MasterFloor.View"
        xmlns:ViewModel="clr-namespace:MasterFloor.ViewModel"
        x:Class="MasterFloor.View.PartnerList"
        mc:Ignorable="d"
        Title="PartnerList"
        Height="450"
        Width="800"
        MinHeight="450"
        MinWidth="800"
        Activated="Window_Activated">
    <Window.DataContext>
        <ViewModel:PartnerViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="700" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="300" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ListView x:Name="PartnersListView"
                  Grid.Row="1"
                  Grid.Column="1"
                  Background="#FFF4E8D3"
                  ItemsSource="{Binding PartnersList}"
                  SelectionChanged="PartnersListView_SelectionChanged">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding type}" />
                            <TextBlock Text=" | " />
                            <TextBlock Text="{Binding name}"
                                       Width="600" />
                            <TextBlock Text="{Binding discount}"/>
                            <TextBlock Text="%" />
                        </StackPanel>
                        
                        <TextBlock Text="{Binding director}" />
                        <TextBlock Text="{Binding phone}" />
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Рейтинг: " />
                            <TextBlock Text="{Binding rating}" />
                        </StackPanel>
                        
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button  Content="Создать " Grid.Row="2" Grid.Column="1"
                 Click="Button_Click" />
    </Grid>
</Window>
